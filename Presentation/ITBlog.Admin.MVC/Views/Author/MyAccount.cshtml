@{
}
<div class="float-right">
    <div class="dropdown dib">
        @if (Model == null)
        {
            <div class="header-icon">
                <span class="user-avatar">
                    Giriş Yap
                    <i class="ti-arrow-circle-right"></i>
                </span>
            </div>
        }
        else
        {
            <div class="header-icon">
                <a href="/Author/GetAuthorInfosById/@Model.Id">
                    <i class="ti-user"></i>
                    <span class="user-avatar">
                        @Model.AuthorName @Model.AuthorLastName
                    </span>
                </a>
            </div>
        }

    </div>
</div>