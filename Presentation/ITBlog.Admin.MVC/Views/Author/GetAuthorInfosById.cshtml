@using ITBlog.Business.DTO;
@model AuthorDTO;

@{
}
<section id="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="user-profile">
                        <div class="row">
                            <div class="col-lg-4">
                                @if (Model.Skills.Any())
                                {
                                    <div class="user-skill">
                                        <h4>Skills</h4>
                                        <ul>
                                            @foreach (var item in Model.Skills)
                                            {
                                                var style = $"width: {item.SkillLearntPercantage}%; height:6px";

                                                <li>
                                                    <a href="#">@item.SkillName</a>
                                                    <p class="progress-bar bg-danger" style="@style" role="progressbar"> <span class="sr-only">@item.SkillLearntPercantage</span> </p>

                                                </li>
                                            }
                                        </ul>
                                    </div>
                                }
                            </div>
                            <div class="col-lg-8">
                                <div class="user-profile-name">@Model.AuthorName @Model.AuthorLastName</div>
                                <div class="user-job-title">Software Developer</div>
                                <div class="custom-tab user-profile-tab">
                                    <ul class="nav nav-tabs" role="tablist">
                                        <li role="presentation" class="active">
                                            <a href="#1" aria-controls="1" role="tab" data-toggle="tab">Hakkında</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane active" id="1">
                                            <div class="contact-information">
                                                <h4>İletişim Bilgileri</h4>
                                                <div class="email-content">
                                                    <span class="contact-title">Email:</span>
                                                    <span class="contact-email">@Model.Email</span>
                                                </div>
                                            </div>
                                            <div class="basic-information">
                                                <h4>Bilgiler</h4>
                                                <div class="birthday-content">
                                                    <span class="contact-title">Birthday:</span>
                                                    <span class="birth-date">@Model.AuthorBirthday.ToString("dd-MM-yyyy hh-mm-ss")</span>
                                                </div>
                                                <div class="about-content">
                                                    <span class="contact-title">Hedefi:</span>
                                                    <span class="birth-date">@Model.AuthorAim</span>
                                                </div>
                                                <div class="about-content">
                                                    <span class="contact-title">Hakkında:</span>
                                                    <span class="birth-date">@Model.AboutMe</span>
                                                </div>
                                                <div class="linecode-content">
                                                    <span class="contact-title">Yazdığı Satır Kod Sayısı:</span>
                                                    <span class="birth-date">@Model.LinesOfCode</span>
                                                </div>
                                                <div class="hour-content">
                                                    <span class="contact-title">Haftada Kaç Saat Çalışıyor:</span>
                                                    <span class="birth-date">@Model.HoursPerWeek</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /# row -->
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-title">
                    <h4>Son Projeleri </h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        @if (Model.Projects.Any())
                        {
                            <table class="table table-hover ">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Status</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Projects)
                                    {
                                        <tr>
                                            <td><a href="@item.ProjectLink">@item.ProjectName</a></td>
                                            <td>
                                                <span class="badge badge-success">Tamamlandı</span>
                                            </td>
                                            <td>@item.CreatedDateTime.ToString("dd-MM-yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-secondary">
                                Henüz bir proje girilmemiş! Lütfen Giriş Yapınız!
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-title">
                    <h4>Son Yazıları (@Model.Posts.Count)</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        @if (Model.Posts.Any())
                        {
                            <table class="table table-hover ">
                                <thead>
                                    <tr>
                                        <th>Başlık</th>
                                        <th>İçerik</th>
                                        <th>Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Posts.OrderByDescending(x => x.CreatedDateTime).Take(3))
                                    {
                                        <tr>
                                            <td>@item.Title</td>
                                            <td>@item.FirstContent</td>
                                            <td>@item.CreatedDateTime.ToString("dd-MM-yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="alert alert-secondary">
                                Henüz bir yazı girilmemiş! Lütfen Giriş Yapınız!
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- /# column -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-title">
                    <h4>Aldığı Son Yorumlar </h4>
                </div>
                @if (Model.Posts.Where(x => x.Comments.Any()).Any())
                {
                    @foreach (var post in Model.Posts.Where(x => x.Comments.Any()))
                    {
                        @if (post.Comments.Any())
                        {
                            @foreach (var comment in post.Comments)
                            {
                                <div class="recent-comment">
                                    <div class="media">
                                        <div class="media-body">
                                            <p>@comment.CommentResult</p>
                                            <p class="comment-date">@comment.CommentDateTime.ToString("dd-MM-yyyy")</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    }
                }
                else
                {
                    <div class="alert alert-secondary">
                        Henüz bir yorum girilmemiş!
                    </div>
                }
            </div>
            <!-- /# card -->
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-title">
                    <h4>Sosyal Medyaları </h4>
                </div>
                @if (Model.SocialMedias.Any())
                {
                    @foreach (var socialMedia in Model.SocialMedias)
                    {
                        <div>
                            <a href="@socialMedia.SocialMediaUrl">@socialMedia.SocialMediaName</a>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-secondary">
                        Henüz bir sosyal medya hesabı girilmemiş!
                    </div>
                }
            </div>
            <!-- /# card -->
        </div>
    </div>
    <!-- /# column -->
</section>