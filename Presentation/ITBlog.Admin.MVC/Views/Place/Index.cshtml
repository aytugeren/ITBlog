@using ITBlog.Business.DTO;
@model List<PlaceDTO>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    int counter = 1;
}
<div class="content-wrap">
    <div class="main">
        <div class="container-fluid">
            <!-- /# row -->
            <section id="main-content">
                <div class="row">
                    <!-- /# column -->
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-title">
                                <h4>Alanlar </h4>

                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover ">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Alan Adı</th>
                                                <th>Post Sayısı</th>
                                                <th>Kategori Sayısı</th>
                                                <th>Oluşturulma Tarihi</th>
                                                <th>Güncelleme Tarihi</th>
                                                <th>Butonlar</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                foreach (var place in Model)
                                                {
                                                    <tr>
                                                        <th scope="row">@counter</th>
                                                        <td>@place.PlaceName</td>
                                                        <td>@place.Categories.Count()</td>
                                                        <td>@place.Posts.Count()</td>
                                                        <td>@place.CreatedDateTime.ToString("dd-MMMM-yyyy")</td>
                                                        <td>@place.UpdatedDateTime?.ToString("dd-MMMM-yyyy")</td>
                                                        <td>
                                                            <a class="btn btn-dark btn-rounded m-b-10 m-l-5" href="/Place/GetPlaceInfoById/@place.Id.ToString()"><i class="ti-pencil"></i></a>
                                                            <a class="btn btn-danger btn-rounded m-b-10 m-l-5" href="/Place/RemovePlace/@place.Id.ToString()"><i class="ti-close"></i></a>
                                                        </td>
                                                    </tr>

                                                    counter++;
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card-body">
                                <a class="btn btn-success m-b-10 m-l-5" href="/Place/GetPlaceInfoById/@Guid.Empty.ToString()">Yeni Ekle</a>
                            </div>
                        </div>
                        <!-- /# card -->
                    </div>
                    <!-- /# column -->
                </div>
                <!-- /# row -->
            </section>
        </div>
    </div>
</div>